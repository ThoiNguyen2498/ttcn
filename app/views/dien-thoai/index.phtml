<script>
    $(document).ready(function () {
        $("#xemThemDienThoai").click(function () {
            var link =location.href;
            var pageNumber = parseInt($("#page").val())+1;
            $.get("http://localhost/tmobile/dien-thoai/loadListSP",{page:pageNumber,link:link},function (data) {
                if (data.length == 115){
                    $("#ketQua").remove();
                }
                $(".product-list").append(data);
                $("#page").val(pageNumber);
            })
        });
        $('#btnLoc').click(function () {
            var gia = $("#locGia").val();
            var hang = $("#locHang").val();
            var hdh = $("#locHDH").val();
            var manHinh = $("#locManHinh").val();
            var sapXep = $("#sapXep").val();

            var link="";
            if (gia != "all"){
                link = link+gia;
            }
            if (hang != "all"){
                if (link.length <= 0){
                    link = link + "hang_LIKE_'%"+hang+"%'";
                }else{
                    link = link + "&" + "hang_LIKE_'%"+hang+"%'";
                }
            }
            if (hdh != "all"){
                if (link.length <= 0){
                    link = link + "heDieuHanh_LIKE_'%"+hdh+"%'";
                }else{
                    link = link + "&" + "heDieuHanh_LIKE_'%"+hdh+"%'";
                }
            }
            if (manHinh != "all"){
                if (link.length <= 0){
                    link = link + manHinh;
                }else{
                    link = link + "&" + manHinh;
                }
            }
            if (sapXep != "all"){
                if (link.length <= 0){
                    link = link + "order="+sapXep;
                }else{
                    link = link + "&" + "order="+sapXep;
                }
            }
            window.location="http://localhost/tmobile/dien-thoai?"+link;
        })
    })
</script>
